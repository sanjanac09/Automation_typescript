{
  "name": "bahah_admin",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
 "scripts": {
  "test:feature": "cucumber-js",
  "test:dashboard": "npm run test:feature -- --tags @dashboard tests/features/dashboard.feature",
  "test:admin": "npm run test:feature -- tests/features/admin.feature",
  "test:hairstylist:edit": "npm run test:feature -- --tags @Edit tests/features/hairstylist.feature",
  "test:hairstylist:add": "npm run test:feature -- --tags @add tests/features/hairstylist.feature",
  "test:hairstylist:validation": "npm run test:feature -- --tags @validation tests/features/hairstylist.feature",
  "test:hairstylist:submit": "npm run test:feature -- --tags @submit tests/features/hairstylist.feature",
  "test:login:valid": "npm run test:feature -- --tags @valid_login tests/features/login.feature",
  "test:login": "npm run test:feature -- tests/features/login.feature",
  "test:login:invalid": "npm run test:feature -- --tags @invalid_email tests/features/login.feature",
  "test:login:empty_email": "npm run test:feature -- --tags @empty_email tests/features/login.feature",
  "test:login:empty_password": "npm run test:feature -- --tags @empty_password tests/features/login.feature",
  "test:login:both_empty": "npm run test:feature -- --tags @both_empty tests/features/login.feature",
  "test:login:wrong_password": "npm run test:feature -- --tags @wrong_password tests/features/login.feature",
  "test:test": "npm run test:feature -- tests/features/test.feature",
  "report": "npx multiple-cucumber-html-reporter --reportName 'Bahah Admin Report' --jsonDir ./reports/json/ --reportPath ./reports/html/ --openReport",
  "lint": "eslint . --ext .ts",
  "test:admin:page": "npm run test:feature -- --tags @page tests/features/admin.feature",
  "test:admin:add": "npm run test:feature -- --tags @addAdmin tests/features/admin.feature",
  "generate-report": "ts-node tests/support/generate-report.ts",
  "test:all": "npm run test:feature && npm run generate-report"
},
